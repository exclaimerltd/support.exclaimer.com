<div class="container-divider"></div>
<div class="container">
  <nav class="sub-nav">
    {{breadcrumbs}}
    {{search scoped=true submit=false}}
  </nav>

  <!-- START: Discontinued Products -->
  {{#is category.name 'Discontinued Products'}}
      <div class="discontinued">
        To see a full list of discontinued Exclaimer Products please see the page <a href="https://www.exclaimer.co.uk/products/discontinued" title="Exclaimer Discontinued & Legacy Products" target="_blank">here</a>
      </div>
  {{/is}}
  <!-- END: Discontinued Products -->

    <!-- START: Migration Banner -->
  {{#is category.name 'Signature Manager Exchange Edition'}}
      <div class="discontinued">
        Important notice: All on-premises products are being discontinued <a href="https://content.exclaimer.com/discontinued-on-premises" title="Migration Product Comparison" target="_blank">here</a>
      </div>
  {{/is}}
  <!-- END: Migration Banner -->

  <div class="category-container">
    <div class="category-content">
      <header class="page-header">
        <h1>{{category.name}}</h1>
        {{#if category.description}}
          <p class="page-header-description">{{category.description}}</p>
        {{/if}}
      </header>
      <div class="cat-container">
        {{#each sections}}
          <a href="{{url}}" class="cat-section">{{name}}
            {{#if internal}}
              <span class="icon-lock" title="{{t 'internal'}}"></span>
            {{/if}}
          </a>
        {{else}}
          <i class="category-empty">
            <a href="{{category.url}}">{{t 'empty'}}</a>
          </i>
        {{/each}}
      </div>
    </div>
  </div>
</div>
