<div class="cloud-leg-banner">
  <a href="https://support.exclaimer.com/hc/en-gb" class="cloud-leg-banner-button">Looking for Exclaimer Cloud Support? Head over to our Exclaimer Cloud Support site.</a>
</div>

<section class="section hero">
  <div class="hero-inner">
    <h1>How can we help?</h1>
    <p>Start by typing a question or a topic below</p>
    {{search submit=false instant=true class='hero-search hero-search-full'}}
  </div>
</section>

<section class="section featured">
  <div class="container">
    <div class="featured-item">
      <!-- START: On Prem Migration -->
      <h3><a href="https://legacy.support.exclaimer.com/hc/en-gb/categories/360000508072" title="Migration Product Comparison" target="_blank"><em>Important Notice:</em> All On-Premise Products are being discontinued</a></h3>
      <a href="https://legacy.support.exclaimer.com/hc/en-gb/categories/360000508072" title="Migration Product Comparison" target="_blank" class="featured-button">Learn More</a>
      <!-- END: On Prem Migration -->
    </div>
  </div>
</section>

<div class="container">
  <section class="section knowledge-base">

    <!-- Promoted Products -->
    <section id="livePromotedProducts" class="categories blocks">
      <ul class="products-list">
        {{#each categories}}
          {{#is name 'Exclaimer Cloud'}}
            <a href='{{url}}' class="products-item products-item-promoted products-item-ec">
              Exclaimer Cloud
            </a>
          {{/is}}
          {{#is name 'Signature Manager Exchange Edition'}}
            <a href='{{url}}' class="products-item products-item-promoted products-item-smee">
              Signature Manager Exchange Edition
            </a>
          {{/is}}
          {{#is name 'Signature Manager Outlook Edition'}}
            <a href='{{url}}' class="products-item products-item-promoted products-item-smoe">
              Signature Manager Outlook Edition
            </a>
          {{/is}}
          {{#is name 'Frequently Asked Questions'}}
            <a href='{{url}}' class="products-item products-item-promoted products-item-faq">
              Frequently Asked Questions
            </a>
          {{/is}}
          {{#is name 'Signature Design'}}
            <a href='{{url}}' class="products-item products-item-promoted products-item-sigd" >
              Signature Design
            </a>
          {{/is}}
        {{/each}}
      </ul>
    </section>
    <!-- Other Products -->
    <section id="liveOtherProducts" class="categories others-blocks">
      <ul class="products-list">
        {{#each categories}}
          {{#is name 'Auto Responder'}}
            <a href='{{url}}' class="products-item products-item-ar">
              Auto Responder
            </a>
          {{/is}}
          {{#is name 'Mail Archiver'}}
            <a href='{{url}}' class="products-item products-item-ma">
              Mail Archiver
            </a>
          {{/is}}
          {{#is name 'Email Alias Manager for Exchange'}}
            <a href='{{url}}' class="products-item products-item-eam">
              Email Alias Manager
            </a>
          {{/is}}
          {{#is name 'Template Editor'}}
            <a href='{{url}}' class="products-item products-item-td">
              Template Editor
            </a>
          {{/is}}
          {{#is name 'Mail Disclaimers'}}
            <a href='{{url}}' class="products-item products-item-md">
              Mail Disclaimers
            </a>
          {{/is}}
          {{#is name 'Discontinued Products'}}
            <a href='{{url}}' class="products-item products-item-disc">
              Discontinued Products
            </a>
          {{/is}}
        {{/each}}
      </ul>
    </section>

  </section>

  {{#if promoted_articles}}
    <section class="section promo-articles">
      <h3>{{t 'promoted_articles'}}</h3>
      <ul class="promo-articles-list">
        {{#each promoted_articles}}
          <li class="promo-articles-item">
            <span data-title="Promoted article" class="icon-star"></span><a href="{{url}}">
              {{title}}
            </a>
          </li>
        {{/each}}
      </ul>
    </section>
  {{/if}}

